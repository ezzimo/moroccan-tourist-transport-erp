# Booking Service Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:booking_pass@db_booking:5432/booking_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/2

# Service Integration URLs
AUTH_SERVICE_URL=http://auth_service:8000
CRM_SERVICE_URL=http://crm_service:8001

# JWT Configuration (must match auth service)
JWT_SECRET_KEY=super-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_AUDIENCE=mtterp
JWT_ISSUER=auth-service

# JWT Allowed Audiences (JSON array or comma-separated)
# Examples:
# JWT_ALLOWED_AUDIENCES=["mtterp","booking_service"]
# JWT_ALLOWED_AUDIENCES=mtterp,booking_service
JWT_ALLOWED_AUDIENCES=["mtterp"]

# Disable audience check for development (use with caution)
JWT_DISABLE_AUDIENCE_CHECK=false

# JWT Allowed Audiences (JSON array or comma-separated)
# Examples:
# JWT_ALLOWED_AUDIENCES=["mtterp","booking_service"]
# JWT_ALLOWED_AUDIENCES=mtterp,booking_service
JWT_ALLOWED_AUDIENCES=["mtterp"]

# Disable audience check for development (use with caution)
JWT_DISABLE_AUDIENCE_CHECK=false

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Environment
ENVIRONMENT=development
DEBUG=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Booking Configuration
MAX_BOOKING_DURATION_DAYS=365
DEFAULT_CURRENCY=MAD

# Real-time Updates
WEBSOCKET_ENABLED=true
NOTIFICATION_TIMEOUT=30

# PDF Generation
BOOKING_PDF_ENABLED=true

# Pricing Configuration
ENABLE_DYNAMIC_PRICING=true
DEFAULT_TAX_RATE=20.0
CURRENCY_PRECISION=2

# Availability Configuration
AVAILABILITY_CACHE_TTL=300
MAX_AVAILABILITY_DAYS=365